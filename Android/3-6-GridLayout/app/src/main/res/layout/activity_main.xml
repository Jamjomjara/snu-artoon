<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="2"
    android:columnCount="4">

    <!-- GridLayout lets us make TableLayout very easily. -->
    <!-- Rather than making <TableRow> every time, GridLayout just specifies the location. -->
    <!-- For example, rowSpan, columnSpan is normally used characteristics. -->
    <!-- At first, specify ColumnCount and rowCount to the Layout, and locate the children views. -->
    <Button
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_gravity="fill_vertical"
        android:text="@string/button1"/>

    <Button
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button2"/>

    <Button
        android:layout_row="0"
        android:layout_column="3"
        android:text="@string/button3"/>

    <Button
        android:layout_row="1"
        android:layout_column="1"
        android:text="@string/button4"/>

    <Button
        android:layout_row="1"
        android:layout_column="2"
        android:text="@string/button5"/>

    <Button
        android:layout_row="1"
        android:layout_column="3"
        android:text="@string/button6"/>


</GridLayout>